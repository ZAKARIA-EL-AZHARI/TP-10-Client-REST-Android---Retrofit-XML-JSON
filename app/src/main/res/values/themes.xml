<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème Principal Modern Corporate -->
    <style name="Theme.ClientRESTAndroidRetrofitXMLJSON" parent="Theme.Material3.Light.NoActionBar">
        <!-- Couleurs Primaires -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>

        <!-- Couleurs Secondaires -->
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="colorSecondaryVariant">@color/accent_teal_light</item>

        <!-- Couleurs d'Arrière-plan -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Couleurs d'Erreur -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_primary</item>
    </style>

    <!-- Style pour les Cartes Modernes -->
    <style name="ModernCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Style pour les Boutons Primaires -->
    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style pour les Boutons Secondaires -->
    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/accent_teal</item>
        <item name="android:textColor">@color/accent_teal</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style pour les Boutons de Suppression -->
    <style name="DangerButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/error_red</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style pour les TextInputLayout -->
    <style name="ModernTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary_blue_light</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Style pour les RadioButton -->
    <style name="ModernRadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>