<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_200"
    app:cardBackgroundColor="@color/surface_primary"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Badge Type de Compte -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COURANT"
            android:textColor="@color/text_on_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/primary_blue"
            app:chipCornerRadius="12dp"
            app:chipMinHeight="24dp"
            app:textStartPadding="8dp"
            app:textEndPadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="COURANT" />

        <!-- ID du Compte avec Style -->
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 001"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="@drawable/id_background"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ID: 001" />

        <!-- Section Solde Principal -->
        <TextView
            android:id="@+id/labelSolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solde actuel"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipType" />

        <TextView
            android:id="@+id/tvSolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 500,00 DH"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelSolde"
            tools:text="2 500,00 DH" />

        <!-- Section Type -->
        <LinearLayout
            android:id="@+id/typeSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSolde">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¦ Compte Courant"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                tools:text="ðŸ¦ Compte Courant" />

        </LinearLayout>

        <!-- Section Date -->
        <LinearLayout
            android:id="@+id/dateSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/typeSection">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 09/11/2024"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                tools:text="ðŸ“… 09/11/2024" />

        </LinearLayout>

        <!-- SÃ©parateur -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dateSection" />

        <!-- Section Boutons d'Action -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Bouton Modifier -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/SecondaryButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="âœï¸ Modifier"
                android:textSize="13sp"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:cornerRadius="20dp"
                android:layout_marginEnd="8dp" />

            <!-- Bouton Supprimer -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/DangerButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ—‘ï¸ Supprimer"
                android:textSize="13sp"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

